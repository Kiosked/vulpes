{
  "name": "vulpes",
  "version": "0.13.1",
  "description": "Job management framework",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel source/ --out-dir dist",
    "dev": "run-s watch",
    "docs": "jsdoc2md 'source/**/*.js' > API.md",
    "format": "prettier --write '{source,test}/**/*.js'",
    "precommit": "lint-staged",
    "prepare": "run-s build",
    "test": "run-s build test:all test:coverage test:format",
    "test:all": "nyc mocha -r test/index.js 'test/**/*.spec.js'",
    "test:coverage": "nyc check-coverage --lines 50 --functions 50 --branches 50 --statements 50",
    "test:format": "prettier-check '{source,test}/**/*.js'",
    "test:integration": "npm run build && mocha -r test/index.js 'test/integration/**/*.spec.js'",
    "test:unit": "npm run build && mocha -r test/index.js 'test/unit/**/*.spec.js'",
    "watch": "nodemon --exec 'npm run build' --watch source/"
  },
  "lint-staged": {
    "{source,test}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kiosked/vulpes.git"
  },
  "keywords": [
    "job",
    "management",
    "service",
    "task"
  ],
  "engines": {
    "node": ">=6"
  },
  "author": "Perry Mitchell <perry@kiosked.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kiosked/vulpes/issues"
  },
  "homepage": "https://github.com/Kiosked/vulpes#readme",
  "dependencies": {
    "@buttercup/channel-queue": "^0.3.0",
    "babel-polyfill": "^6.26.0",
    "debounce": "^1.1.0",
    "eventemitter3": "^3.1.0",
    "file-exists": "^5.0.1",
    "merge": "^1.2.0",
    "ms": "^2.1.1",
    "multisort": "^0.5.3",
    "nested-property": "0.0.7",
    "p-limit": "^2.0.0",
    "pify": "^4.0.0",
    "sleep-promise": "^8.0.1",
    "uuid": "^3.3.2",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "husky": "^0.14.3",
    "jsdoc-to-markdown": "^4.0.1",
    "lint-staged": "^7.2.2",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "nyc": "^12.0.2",
    "prettier": "^1.14.2",
    "prettier-check": "^2.0.0",
    "sinon": "^6.1.5"
  }
}
